
{
    "compilerOptions": {
      "module": "esnext",
      "target": "es6",
      "jsx": "preserve",
      "strict": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": ["webpack-env", "jest", "node"],
      "paths": {
        "@/*": ["src/*"]
      },
      "lib": ["esnext", "dom"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"]
  }
  